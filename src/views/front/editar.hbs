<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/crud/editar/{{usuario.id_empleados}}" method="POST">
                        <div class="form-group mb-3">
                            <label for="nombre" class="form-label">Nombre del usuario:</label>
                            <input type="text" name="nombre_empleado" id="nombre" value="{{usuario.nombre_empleado}}" class="form-control" placeholder="Nombre del empleado">
                        </div>
                        <div class="form-group mb-3">
                            <label for="edad" class="form-label">Edad del usuario:</label>
                            <input type="text" name="edad_empleado" id="edad" value="{{usuario.edad_empleado}}" class="form-control" placeholder="Edad del empleado">
                        </div> 
                        <div class="form-group mb-3">
                            <label for="sexo" class="form-label">Sexo ({{usuario.sexo_empleado}}):</label>
                            <select class="form-select" name="sexo_empleado" id="sexo" aria-label="Default select example">
                                <option value="Masculino">Masculino</option>
                                <option value="Femenino">Femenino</option>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="puesto" class="form-label">Puesto ({{usuario.id_puesto}}):</label>
                            <select class="form-select" name="id_puesto" id="puesto" aria-label="Default select example">
                                <option value="1">Junior</option>
                                <option value="2">Senior</option>
                                <option value="3">Lider</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>